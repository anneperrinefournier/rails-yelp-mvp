<%= link_to "Back", restaurants_path %>

<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<%# <p><%= @restaurant.reviews.rating</p> %>
<%# <p><%= @restaurant.reviews.content</p> %>


<h2>Reviews</strong></h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %></li>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>

<%= render "form_review", review: @review, restaurant: @restaurant %>
